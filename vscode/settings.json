{
    // General
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "material-icon-theme",
    "debug.onTaskErrors": "abort",
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "none",
    "workbench.activityBar.location": "top",

    // Terminal
    "terminal.external.osxExec": "iTerm2",
    "terminal.integrated.fontFamily": "'MesloLGS NF', monospace",
    "terminal.integrated.profiles.linux": {
        "bash": null,
        "tmux": {
            "path": "bash",
            "args": [
                "-c",
                "tmux new -ADs ${PWD##*/}"
            ],
            "icon": "terminal-tmux"
        }
    },
    "terminal.integrated.defaultProfile.linux": "tmux",
    "terminal.integrated.profiles.osx": {
        "bash": null,
        "tmux": {
            "path": "bash",
            "args": [
                "-c",
                "tmux new -ADs ${PWD##*/}"
            ],
            "icon": "terminal-tmux"
        }
    },
    "terminal.integrated.defaultProfile.osx": "tmux",

    // Editor
    "editor.renderWhitespace": "none",
    "editor.inlayHints.enabled": "off",
    "editor.fontFamily": "'MesloLGS NF', monospace",
    // "editor.fontFamily": "'Monaspace Neon', monospace",
    "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'liga'",
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "diffEditor.ignoreTrimWhitespace": false,
    // "files.trimTrailingWhitespace": true,
    "trailing-spaces.deleteModifiedLinesOnly": true,
    "trailing-spaces.trimOnSave": true,
    "workbench.editor.showTabs": "none",
    "[python]": {
        "editor.rulers": [
            88
        ]
    },
    "[cpp]": {
        "editor.rulers": [
            80
        ]
    },

    // clangd
    "clangd.arguments": [
        "-header-insertion=never"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.path": "/Users/nbianco/Library/Application Support/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",

    // CMake
    "cmake.configureOnOpen": false,
    "cmake.showOptionsMovedNotification": false,
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.allowUnsupportedPresetsVersions": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.automaticReconfigure": false,

    // Git
    "git.openRepositoryInParentFolders": "always",
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.replaceTagsWhenPull": true,

    // Dotfiles
    "dotfiles.repository": "https://github.com/nickbianco/dotfiles.git",
    "dotfiles.targetPath": "~/.dotfiles",
    "git.suggestSmartCommit": false,
    "window.customTitleBarVisibility": "auto",
    "terminal.integrated.commandsToSkipShell": [
        "matlab.interrupt"
    ],
    "MATLAB.showFeatureNotAvailableError": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": false,
        "scminput": false
    },
    "python.defaultInterpreterPath": "/Users/nbianco/miniconda3",
    "files.exclude": {
        "": true,
        "**/.git": false
    },
    "gitlens.ai.model": "vscode",
    "git.blame.editorDecoration.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
}