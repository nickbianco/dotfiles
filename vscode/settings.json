{
    // General
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "material-icon-theme",
    "debug.onTaskErrors": "abort",
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "none",
    "workbench.activityBar.location": "top",

    // Terminal
    "terminal.external.osxExec": "iTerm2",
    "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono, monospace",
    // "terminal.integrated.fontFamily": "'Monaspace Krypton', monospace",
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.profiles.linux": {
        "bash": null,
        "tmux": {
            "path": "bash",
            "args": [
                "-c",
                "tmux new -ADs ${PWD##*/}"
            ],
            "icon": "terminal-tmux"
        }
    },
    "terminal.integrated.defaultProfile.linux": "tmux",
    "terminal.integrated.profiles.osx": {
        "bash": null,
        "tmux": {
            "path": "bash",
            "args": [
                "-c",
                "tmux new -ADs ${PWD##*/}"
            ],
            "icon": "terminal-tmux"
        }
    },
    "terminal.integrated.defaultProfile.osx": "tmux",
    
    // Editor
    "editor.fontSize": 12,
    "editor.renderWhitespace": "none",
    "editor.inlayHints.enabled": "off",
    "editor.fontFamily": "MesloLGS Nerd Font Mono, monospace",
    // "editor.fontFamily": "'Monaspace Neon Medium', monospace",
    "editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'liga'",
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.trimTrailingWhitespace": false,
    "workbench.editor.showTabs": "none",
    "[python]": {
        "editor.rulers": [
            88
        ]
    },
    "[cpp]": {
        "editor.rulers": [
            80
        ]
    },

    // clangd
    "clangd.arguments": [
        "-header-insertion=never"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    
    // CMake
    "cmake.configureOnOpen": false,
    "cmake.showOptionsMovedNotification": false,
    "cmake.configureSettings": {
        // "OPENSIM_WITH_CASADI": true,
        // "OPENSIM_WITH_TROPTER": true,
        // "SUPERBUILD_ezc3d": true,
        // "OPENSIM_C3D_PARSER": "ezc3d",
        // "BUILD_PYTHON_WRAPPING": true,
        // "Python3_ROOT_DIR": "C:/Users/nbianco/anaconda3/envs/opensim_dev",
        // "OPENSIM_DOXYGEN_USE_MATHJAX": false,
        // "DOXYGEN_EXECUTABLE": "/usr/bin/doxygen"
        // "Enzyme_DIR": "/home/nbianco/repos/Enzyme/enzyme/build",
    },
    "cmake.showConfigureWithDebuggerNotification": false,
    "cmake.allowUnsupportedPresetsVersions": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.automaticReconfigure": false,

    // Git
    "git.openRepositoryInParentFolders": "always",
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.replaceTagsWhenPull": true,

    // Dotfiles
    "dotfiles.repository": "https://github.com/nickbianco/dotfiles.git",
    "dotfiles.targetPath": "~/.dotfiles",
    "git.suggestSmartCommit": false,
}